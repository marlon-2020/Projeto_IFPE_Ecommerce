<header>
  <nav>
    <div class="nav-wrapper menu-personal-configs text-black">
      <a href="/" class="brand-logo logo-bold">Peaky Pay</a>
      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        <li>
          <label for="search"><i class="Large material-icons">search</i></label>
        </li>
        <li>
          <input type="text" class="search" name="Pesquisa" id="search" />
        </li>
        <li>
          <a href="/carrinho">
            <i class="Medium material-icons" id="market">local_grocery_store</i>
          </a>
        </li>
        <li>
          <a class="dropdown-trigger" href="#!" data-target="dropdown1"><i class="fas fa-caret-down" id="arrow"></i></a>
        </li>
      </ul>
    </div>
  </nav>

  <ul class="sidenav" id="mobile-demo">
    <li><a href="/login">Login</a></li>
    <li><a href="/register">Register</a></li>
    <li class="mobile-search-container">
      <label for="search-m"><i class="Large material-icons">search</i></label>
      <input type="text" class="search" name="Pesquisa" id="search-m" />
    </li>
  </ul>

  <div class="dropdown-arrow" id="dropdown-options">
    <div class="box">
      <a href="/login" class="waves-effect waves-light btn-small green accent-3">Login</a>
      <a href="/register" class="waves-effect waves-light btn-small grey darken-1">Register</a>
    </div>
  </div>
</header>
{{# if produtos}}
<section class="carrinho">
  {{#each produtos}}
  <div class="carrinho-item">
    <img src="{{this.item.imagem}}" class="icon" alt="{{this.item.nomeProduto}}" />
    <div class="icon-data">
      <p class="icon-data-name">Nome: {{this.item.nomeProduto}}</p>
      <p id="product-preco" class="icon-data-name">Valor: R$ {{this.item.valor}}</p>
      <p class="icon-data-name">{{this.item.valorPar}}</p>
      <p class="icon-data-name">Quantidade:
        <input
          type="number"
          min="1"
          max="{{this.item.estoque}}"
          value="{{this.qnt}}"
          id="product-quant"
          onchange="changeQuant({{this.item.id}})"
          >
        </p>
    </div>
    <div style="padding: 10px 10px 10px 10px; width: 100%; height: 50px;">
      <a href="/drop-produto/{{this.item.id}}"><i class=" close material-icons right white-text">close</i></a>
    </div>
  </div>
  {{/each}}
</section>
<section class="btn-confirm">
  <div id="total">
    <p id="totalPrice">Total: {{totalPreco}}</p>
  </div>
  <div class="btn-container">
    <button class="confirm waves-effect waves-light  green accent-3"><a href="/checkout">Finalizar Compra</a></button>
    <button class="cancel waves-effect waves-light  red darken-1"><a href="/">Cancelar</a></button>
  </div>
</section>
{{ else }}
<section class="carrinho">
  <div class="carrinho-item">
    <h2>Nenhum item no carrinho</h2>
  </div>
</section>
{{/if}}
<script src="./js/menu.js"></script>
<script src="./js/script.js"></script>
<script src="./js/carrinho.js"></script>
